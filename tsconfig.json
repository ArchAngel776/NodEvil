{
    "compilerOptions": {
        "allowJs": false,
        "strict": true,
        "alwaysStrict": true,
        "rootDir": "./Src",
        "outDir": "./Build",
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES2015",
        "downlevelIteration": true,
        "noImplicitAny": true,
        "lib": [
            "ES2015"
        ],
        "types": [
            "node"
        ],
        "declaration": true,
        "declarationMap": true
    },
    "include": [
        "Src"
    ],
    "exclude": [
        "Build",
        "node_modules"
    ]
}